<h1>Your Workout Routine:</h1>

<style>
	table, th, td {
		border: 1px solid black;
	}

</style>

<script src="/home.js"></script>

<form>
  <fieldset>
    <legend>Input Data to Enter into Table</legend>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name">
    <label for="reps">Number of Reps: </label>
    <input type="text" name="reps" id="reps">
    <label for="weight">Weight Done: </label>
    <input type="text" name="weight" id="weight">
    <label for="date">Date Performed (Enter as YYYY-MM-DD): </label>
    <input type="text" name="date" id="date">
    <label for="lbs">Lbs? (TRUE is Lbs, FALSE is Kg): </label>
    <input type="text" name="lbs" id="lbs">
    <input type="submit" id="workoutSubmit">
  </fieldset>
</form>

<table>
	<tr>
		<th>ID</th>
		<th>Workout Name</th>
		<th>Number of Reps</th>
		<th>Weight Done</th>
		<th>Date Performed</th>
		<th>Unit of Measurement</th>
	</tr>

    {{#each results}}
    <tr>
    	
    	<td>{{this.name}}</td>
    	<td>{{this.reps}}</td>
    	<td>{{this.weight}}</td>
    	<td>{{this.date}}</td>
    	<td>{{this.unit}}</td>
    </tr>
    {{/each}}
   
</table>

<p>{{results}}</p>

