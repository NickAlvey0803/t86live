<form action="/videos/insert" action="get">
  <fieldset>
    <legend>Upload Some Information About Your Video</legend>
    <label for="uid">Enter your Username: </label>
    <input type="text" name="uid" id="uid">
    <label for="title">What is the Title of Your Video?: </label>
    <input type="text" name="title" id="title">
    <label for="video_description">Describe Your Video: </label>
    <input type="text" name="video_description" id="video_description">
    <label for="category">Category (Type of Lift): </label>
    <input type="text" name="category" id="category">
    <label for="weight">How Much Did You Lift?: </label>
    <input type="text" name="weight" id="weight">
    <label for="uploader_weight">How Much Do You Weigh?: </label>
    <input type="text" name="uploader_weight" id="uploader_weight">
    <label for="light_score">Enter Your Initial Score (this will be updated by comments; enter TRUE for passing, FALSE for not passing): </label>
    <input type="text" name="light_score" id="light_score">
    <input type="submit" id="videoSubmit", value = "INPUT VIDEO">
  </fieldset>
</form>


<form action="/videos/delete" action="get">
  <fieldset>
    <legend>Delete a Video</legend>
    <label for="video_id">Enter the Title of the Video to Delete: </label>
    <input type="text" name="video_id" id= "video_id">
    <input type="submit" id = "deleteSubmit" value="DELETE VIDEO">
  </fieldset>
</form>

<form action="/videos/edit" action="get">
  <fieldset>
    <legend>Edit a Video</legend>
    <label for="video_id_edit">Enter the Title of the Video to Edit: </label>
    <input type="text" name="video_id_edit" id="video_id_edit">
    <label for="video_description_edit">Enter the New Video Description: </label>
    <input type="text" name="video_description_edit" id="video_description_edit">
    <label for="category_edit">Enter the New Category (Type of Lift): </label>
    <input type="text" name="category_edit" id="category_edit">
    <label for="weight_edit">Enter the New Lift Weight: </label>
    <input type="text" name="weight_edit" id="weight_edit">
    <label for="uploader_weight_edit">Enter the New User Weight: </label>
    <input type="text" name="uploader_weight_edit" id="uploader_weight_edit">
    <label for="light_score">Enter Your New Video Score (enter TRUE for passing, FALSE for not passing): </label>
    <input type="text" name="light_score_edit" id="light_score_edit">
    <input type="submit" id = "editSubmit" value="EDIT VIDEO">
  </fieldset>
</form>

<form action="/videos/search" action="get">
	<fieldset>
		<legend> Search by username </legend>
		<label for="search">Enter username: </label>
		<input type="text" name="search" id="search">
		<input type="submit" id="searchSubmit" value = "SEARCH">
	</fieldset>
</form>


<table class= "bodydiv">

    <tr>
        <th>UID</th>
        <th>Video Title</th>
        <th>Video Description</th>
        <th>Category</th>
        <th>Weight Lifted</th>
        <th>Uploader Weight</th>
        <th>Light Score (0 Passing, 1 Not Passing)</th>
    </tr>

    {{#each results}}
    <tr>
        <td>{{this.username}}</td>
        <td>{{this.title}}</td>
        <td>{{this.video_description}}</td>
        <td>{{this.category}}</td>
        <td>{{this.weight}}</td>
        <td>{{this.uploader_weight}}</td>
        <td>{{this.aveg}}</td>
    </tr>
    {{/each}}
   
</table>
