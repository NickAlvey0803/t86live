<h1>Users:</h1>

<style>
    table, th, td {
        border: 1px solid black;
    }

</style>

<script src="/home.js"></script>

<form>
  <fieldset>
    <legend>Input Data to Enter into Table</legend>
    <label for="username">Username: </label>
    <input type="text" name="username" id="username">
    <label for="password">Password: </label>
    <input type="text" name="password" id="password">
    <label for="description">Describe Yourself: </label>
    <input type="text" name="description" id="description">
    <label for="user_score">What's Your Score?: </label>
    <input type="text" name="user_score" id="user_score">
    <input type="submit" id="userSubmit">
  </fieldset>
</form>

<table>
    <tr>
        <th>Username</th>
        <th>Password</th>
        <th>Description</th>
        <th>User Score</th>
        <th>Edit/Delete</th>
    </tr>

    {{#each results}}
    <tr>
        
        <td>{{this.name}}</td>
        <td>{{this.username}}</td>
        <td>{{this.password}}</td>
        <td>{{this.description}}</td>
        <td>{{this.user_score}}</td>
        <td>
            <form method="get">
                <input type="hidden", name = "id", id = "id", value="{{this.user_id}}">
                <input type="submit", name = "deleteSubmit", , id = "deleteSubmit", value="DELETE">
            </form>
            <form method="get">
                <input type="hidden", name = "id", id = "id", value="{{this.user_id}}">
                <input type="submit", name = "editSubmit", id="editSubmit", value="EDIT">
            </form>

        </td>
    </tr>
    {{/each}}
   
</table>

